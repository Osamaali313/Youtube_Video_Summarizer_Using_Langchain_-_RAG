# =============================================================================
# Python/FastAPI Backend - Environment Variables
# =============================================================================

# Application
APP_NAME="YouTube AI Summarizer API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/youtube_summarizer

# Redis
REDIS_URL=redis://localhost:6379/0

# Vector Database
VECTOR_DB_TYPE=chroma
CHROMA_PERSIST_DIR=./data/chroma

# AI Provider API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
OPENROUTER_API_KEY=

# Default AI Models
DEFAULT_LLM_PROVIDER=openrouter
DEFAULT_MODEL=anthropic/claude-3.5-sonnet
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LangSmith (Optional - for monitoring)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=youtube-summarizer

# Web Search
TAVILY_API_KEY=

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=300

# Summarization
MAX_VIDEO_LENGTH=7200
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Caching
CACHE_TTL=3600
ENABLE_CACHE=true

# Logging
LOG_LEVEL=INFO
